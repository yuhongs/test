        &lt;/a&gt;&lt;/li&gt;
        &lt;li&gt;&lt;a href=""&gt;
        &lt;span class="visuallyhidden"&gt;next&lt;/span&gt;
        &lt;span aria-hidden="true"&gt;&amp;raquo;&lt;/span&gt;
        &lt;/a&gt;&lt;/li&gt;
    &lt;/ul&gt;
